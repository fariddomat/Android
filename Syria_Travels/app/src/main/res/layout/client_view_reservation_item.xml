<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/c_v_l_imageView"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/company_list_name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/company_list_name"
        android:layout_marginTop="13dp"
        android:layout_weight="1"
        android:paddingLeft="15dp"

        android:src="@drawable/user_ic"
        app:layout_constraintHorizontal_bias="0.08"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from:"
        android:layout_above="@+id/textView17"
        android:layout_alignRight="@+id/c_v_l_cname"
        android:layout_alignEnd="@+id/c_v_l_cname"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/c_v_l_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:text="from"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to:"
        android:layout_alignBottom="@+id/c_v_l_imageView"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:id="@+id/c_v_l_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignLeft="@+id/c_v_l_from"
        android:layout_alignStart="@+id/c_v_l_from" />

    <TextView
        android:id="@+id/c_v_l_cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:text="Company_name"
        android:layout_below="@+id/c_v_l_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/c_v_l_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/c_v_l_cname"
        android:layout_toEndOf="@+id/c_v_l_from"
        android:layout_toRightOf="@+id/c_v_l_from"
        android:text="Date" />

    <TextView
        android:id="@+id/c_v_l_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:text="time"
        android:layout_alignBaseline="@+id/c_v_l_date"
        android:layout_alignBottom="@+id/c_v_l_date"
        android:layout_toRightOf="@+id/c_v_l_date"
        android:layout_toEndOf="@+id/c_v_l_date" />

    <ImageView
        android:id="@+id/c_v_l_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/c_v_l_from"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        app:srcCompat="@drawable/plane" />
</RelativeLayout>