<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/item1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:src="@drawable/user_ic"
        android:id="@+id/c_v_l_imageView"
        app:layout_constraintHorizontal_bias="0.08"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="269dp"
        android:layout_marginTop="11dp"

        android:paddingLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:text="User Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteY="117dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/client_list_username"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@+id/c_v_l_imageView"
        android:layout_toRightOf="@+id/c_v_l_imageView"
        android:layout_toEndOf="@+id/c_v_l_imageView"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Email :"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"

        android:paddingLeft="15dp"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteY="117dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/client_list_email"
        android:layout_below="@+id/c_v_l_imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Password:"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/client_list_pass"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/client_list_email"
        android:layout_alignLeft="@+id/client_list_email"
        android:layout_alignStart="@+id/client_list_email"
        android:layout_marginTop="17dp" />
</RelativeLayout>