<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCompany"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/company_list_name"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/company_list_name"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:src="@drawable/user_ic"
            app:layout_constraintHorizontal_bias="0.08"
            tools:layout_editor_absoluteX="269dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/company_list_id"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignTop="@+id/c_v_l_imageView"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/c_v_l_imageView"
            android:layout_toRightOf="@+id/c_v_l_imageView"
            android:layout_weight="5"
            android:text="Company id :"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            app:layout_constraintHorizontal_bias="0.93"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="30dp" />
    </LinearLayout>
    <TextView
        android:text="Company Name :"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="73dp"
        tools:layout_editor_absoluteX="8dp"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:textColor="@android:color/black"
        android:id="@+id/company_list_name"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/c_v_l_imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold" />
    <TextView
        android:id="@+id/company_list_details"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/company_list_name"
        android:layout_marginTop="7dp"
        android:paddingLeft="15dp"
        android:text="Details :"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="117dp" />



</LinearLayout>