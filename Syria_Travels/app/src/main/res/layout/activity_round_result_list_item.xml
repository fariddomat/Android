<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/list_view_selected">
    <ImageView
        android:id="@+id/c_v_l_imageView"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:src="@drawable/user_ic"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="7dp"
        android:layout_alignTop="@+id/one_way_dep_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/one_way_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="departure date"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/c_v_l_imageView"
        android:layout_toEndOf="@+id/c_v_l_imageView" />

    <TextView
        android:id="@+id/one_way_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="duration"
        android:textColor="@android:color/holo_green_light"
        android:layout_below="@+id/one_way_dep_date"
        android:layout_alignLeft="@+id/one_way_dep_date"
        android:layout_alignStart="@+id/one_way_dep_date" />

    <TextView
        android:id="@+id/one_way_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="company_name"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/one_way_duration"
        android:layout_alignLeft="@+id/one_way_duration"
        android:layout_alignStart="@+id/one_way_duration" />

    <TextView
        android:id="@+id/one_way_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:text="price"
        android:layout_above="@+id/one_way_company_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>